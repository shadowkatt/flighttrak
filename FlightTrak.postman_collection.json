{
  "info": {
    "name": "FlightTrak API",
    "description": "Test endpoints for FlightTrak flight tracking system",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Get Flights",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:3000/api/flights",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api", "flights"]
        },
        "description": "Get all current flights in the configured area"
      }
    },
    {
      "name": "Get Route Info",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:3000/api/route/:icao24?callsign=UAL123&lat=40.7128&lon=-74.0060&altitude=3048",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api", "route", ":icao24"],
          "query": [
            {
              "key": "callsign",
              "value": "UAL123"
            },
            {
              "key": "lat",
              "value": "40.7128"
            },
            {
              "key": "lon",
              "value": "-74.0060"
            },
            {
              "key": "altitude",
              "value": "3048"
            }
          ],
          "variable": [
            {
              "key": "icao24",
              "value": "a12345",
              "description": "ICAO24 transponder code"
            }
          ]
        },
        "description": "Get detailed route information for a specific flight"
      }
    },
    {
      "name": "Get Config",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:3000/api/config",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api", "config"]
        },
        "description": "Get server configuration including location, radius, and API settings"
      }
    },
    {
      "name": "Get API Costs",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:3000/api/cost",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api", "cost"]
        },
        "description": "Check API usage and costs for FlightAware, OpenSky, and Flightradar24"
      }
    },
    {
      "name": "Change API Provider (FlightAware)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"provider\": \"flightaware\"\n}"
        },
        "url": {
          "raw": "http://localhost:3000/api/config/provider",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api", "config", "provider"]
        },
        "description": "Switch to FlightAware as the enhanced data provider"
      }
    },
    {
      "name": "Change API Provider (Flightradar24)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"provider\": \"flightradar24\"\n}"
        },
        "url": {
          "raw": "http://localhost:3000/api/config/provider",
          "protocol": "http",
          "host": ["localhost"],
          "port": "3000",
          "path": ["api", "config", "provider"]
        },
        "description": "Switch to Flightradar24 as the enhanced data provider"
      }
    }
  ]
}



